services:
  # PostgreSQL Database
  db:
    image: postgres:15-alpine
    container_name: math_stumper_db
    environment:
      POSTGRES_DB: ${POSTGRES_DB:-math_stumper}
      POSTGRES_USER: ${POSTGRES_USER:-math_user}
      POSTGRES_PASSWORD: ${POSTGRES_PASSWORD:-math_password_123}
    volumes:
      - postgres_data:/var/lib/postgresql/data
    ports:
      - "5434:5432"
    healthcheck:
      test: ["CMD-SHELL", "pg_isready -U ${POSTGRES_USER:-math_user} -d ${POSTGRES_DB:-math_stumper}"]
      interval: 5s
      timeout: 5s
      retries: 5
    restart: unless-stopped

  # Django Backend
  django:
    build: .
    container_name: math_stumper_api
    command: gunicorn --bind 0.0.0.0:8000 --workers 2 --threads 4 --timeout 300 --access-logfile - django_math_stumper.wsgi:application
    volumes:
      - .:/app
    ports:
      - "8000:8000"
    environment:
      - DEBUG=True
      - SECRET_KEY=django-insecure-debug-key
      - POSTGRES_DB=math_stumper
      - POSTGRES_USER=math_user
      - POSTGRES_PASSWORD=math_password_123
      - POSTGRES_HOST=db
      - POSTGRES_PORT=5432
      - ALLOWED_HOSTS=*
      - CORS_ALLOW_ALL_ORIGINS=True
    depends_on:
      db:
        condition: service_healthy
    restart: unless-stopped

  # React Frontend
  frontend:
    build: ./frontend
    container_name: math_stumper_ui
    ports:
      - "3000:80"
    depends_on:
      - django
    restart: unless-stopped

volumes:
  postgres_data:
